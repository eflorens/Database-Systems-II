{% extends 'base.html.twig' %}
{% block body %}
    <div class="jumbotron text-center">
        <h1>Travel Diary</h1>
        <h3>Your travel stories in one place</h3>
    </div>

    <div class="container">
        <h2>Latest Travels</h2>
        <div class="row flex">
            {% for travel in travels %}
                <div class="col-3 mt-2 mb-2">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <a href="#">{{ travel.title }}</a>
                            </h5>
                            <p class="card-text">
                                {{ travel.summary(100) }}
                            </p>
                            <p class="card-text">
                                <small class="text-muted">
                                    Posted on {{ travel.formattedDate }}
                                </small>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

