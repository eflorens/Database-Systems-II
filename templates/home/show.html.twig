{% extends 'base.html.twig' %}

{% block body %}
    <!-- Page Content -->
    <div class="container mt-4">

        <div style="display: flex; justify-content: left; align-items: flex-end;">
            <h1 class="mt-4" style="display:inline-block;">
                {{ travel.title }}
            </h1>
            <p class="small align-text-bottom ml-2">
                by {{ user.username|upper }}
            </p>
        </div>
        <p class="text-muted">Posted on {{ travel.formattedDate }}</p>
        <span class="badge badge-secondary">from {{ travel.originName|upper }}</span>
        <span class="badge badge-secondary">to {{ travel.destinationName|upper }}</span>
        <span class="p-1 bg-primary font-weight-bold text-white rounded-circle float-right">{{ travel.getFormattedCost() }} €</span>
        <hr>

        <div class="col-12">
            <p class="lead">
                {{ travel.description }}
            </p>
        </div>

        <table class="table table-hover mt-4">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">City</th>
                <th scope="col">Country</th>
                <th scope="col">Transportation</th>
                <th scope="col">Cost</th>
                <th scope="col">Description</th>
            </tr>
            </thead>
            <tbody>
            {% set it = 1 %}
            {% for location in locations %}
                <tr>
                    <th style="white-space: nowrap;" scope="row">{{ it }}</th>
                    <td style="white-space: nowrap;">{{ location.city }}</td>
                    <td style="white-space: nowrap;">{{ location.fullCountryName }}</td>
                    <td style="white-space: nowrap;">{{ location.transportation }}</td>
                    <td style="white-space: nowrap;">{{ location.formattedCost }} €</td>
                    <td style="font-size: 14px">{{ location.description }}</td>
                    {% set it = it + 1 %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}