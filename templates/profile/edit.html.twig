{% extends 'base.html.twig' %}

{% block body %}

    <div class="container mt-4">
        <h2>Edit a travel</h2>
        {{ form_start(form) }}
        <div class="row">
            <div class="col-12">
                {{ form_row(form.travel.title) }}
            </div>

            <div class="col-6">
                {{ form_row(form.travel.origin) }}
            </div>

            <div class="col-6">
                {{ form_row(form.travel.destination) }}
            </div>

            <div class="col-12">
                {{ form_row(form.travel.description, { "attr": {"rows": "6"} }) }}
            </div>

            <div class="col-3">
                {{ form_label(form.travel.cost, "Total Cost") }}
                {{ form_widget(form.travel.cost) }}
            </div>

            <div class="col-9">
                {{ form_row(form.rating) }}
            </div>



            <div class="col-12">
                <hr>
                <h2 class="mb-4 mt-4 text-center">Visited Locations</h2>
            </div>

            {% set it = 1 %}

            <div class="container locations"
                 data-prototype="{{ form_widget(form.location.vars.prototype)|e('html_attr') }}">
                {% for el in form.location %}
                    <h3>Location {{ it }}</h3>
                <div class="row">
                    <div class="col-12">
                        {{ form_row(el.city) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(el.country) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(el.description) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(el.cost) }}
                    </div>
                    <div class="col-12">
                        {{ form_row(el.transportation) }}
                    </div>
                </div>
                    {% set it = it + 1 %}
                {% endfor %}
            </div>

        </div>
        <button type="submit" class="btn btn-primary mb-5">Submit</button>
        {{ form_end(form) }}
    </div>

{% endblock %}


